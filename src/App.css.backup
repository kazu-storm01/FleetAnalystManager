#root {
  max-width: 1280px;
  margin: 0 auto;
  padding: 2rem;
  text-align: center;
}

/* fleethub式ステータス表示のスタイル調整 */
.ship-stats-fleethub {
  margin-top: 8px;
}

.fleet-slot-stats {
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 4px;
  padding: 6px;
}

.ship-stats-fleethub .ship-status-display {
  height: auto;
  min-height: 120px;
}

/* アビサルテーマでの調整 */
[data-theme="abyssal"] .fleet-slot-stats {
  background-color: rgba(139, 0, 0, 0.15);
}

/* ===== 艦隊編成機能のスタイル ===== */

/* ドラッグヒントオーバーレイ（シンプル版） */
.drag-hint-overlay {
  position: fixed;
  top: 20px;
  right: 20px;
  z-index: 2000;
  pointer-events: none;
  animation: fadeInHint 0.2s ease-out;
}

@keyframes fadeInHint {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}

.drag-hint-content {
  background: rgba(13, 71, 161, 0.8);
  border: 1px solid rgba(100, 181, 246, 0.4);
  border-radius: 12px;
  padding: 12px 16px;
  backdrop-filter: blur(10px);
  box-shadow: 0 4px 12px rgba(100, 181, 246, 0.2);
  display: flex;
  align-items: center;
  gap: 8px;
}

.fleet-composer.abyssal .drag-hint-content {
  background: rgba(136, 14, 79, 0.8);
  border-color: rgba(244, 143, 177, 0.4);
  box-shadow: 0 4px 12px rgba(244, 143, 177, 0.2);
}

.drag-hint-icon {
  font-size: 1.5rem;
  opacity: 0.8;
}

.drag-hint-text {
  font-size: 0.9rem;
  color: #e3f2fd;
  font-weight: 500;
  opacity: 0.9;
}

.fleet-composer.abyssal .drag-hint-text {
  color: #ffebee;
}

.drag-hint-ship {
  display: none;
}

.fleet-composer {
  position: relative;
  min-height: 100vh;
  background: linear-gradient(135deg, #0a0f2e 0%, #1a237e 50%, #283593 100%);
  color: #e3f2fd;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  overflow: hidden;
}

.fleet-composer.abyssal {
  background: linear-gradient(135deg, #1a0d0d 0%, #4a0e0e 50%, #6d1b1b 100%);
  color: #ffebee;
}

/* メインエリア */
.fleet-composition-area {
  padding: 20px;
  max-width: 1200px;
  margin: 0 auto;
  padding-bottom: 580px; /* ドロワーのための余白 */
  position: relative;
  z-index: 100; /* ドロップターゲットとして機能するように */
  transition: all 0.3s ease;
}

/* ドラッグ中のエリアハイライト（控えめ） */
body.dragging-ship .fleet-composition-area {
  background: rgba(100, 181, 246, 0.05);
  border: 1px dashed rgba(100, 181, 246, 0.2);
  border-radius: 20px;
}

body.dragging-ship .fleet-composer.abyssal .fleet-composition-area {
  background: rgba(244, 143, 177, 0.05);
  border-color: rgba(244, 143, 177, 0.2);
}

.fleet-composition-area h2 {
  text-align: center;
  font-size: 2rem;
  margin-bottom: 30px;
  color: #64b5f6;
  text-shadow: 0 0 10px rgba(100, 181, 246, 0.5);
}

.fleet-composer.abyssal .fleet-composition-area h2 {
  color: #f48fb1;
  text-shadow: 0 0 10px rgba(244, 143, 177, 0.5);
}

/* 艦隊ステータスパネル */
.fleet-stats-panel {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-bottom: 30px;
  flex-wrap: wrap;
}

.stat-item {
  background: rgba(100, 181, 246, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(100, 181, 246, 0.3);
  border-radius: 12px;
  padding: 15px 20px;
  text-align: center;
  min-width: 100px;
  transition: all 0.3s ease;
}

.fleet-composer.abyssal .stat-item {
  background: rgba(244, 143, 177, 0.1);
  border-color: rgba(244, 143, 177, 0.3);
}

.stat-item:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(100, 181, 246, 0.2);
}

.fleet-composer.abyssal .stat-item:hover {
  box-shadow: 0 8px 20px rgba(244, 143, 177, 0.2);
}

.stat-label {
  display: block;
  font-size: 0.9rem;
  color: #90caf9;
  margin-bottom: 5px;
}

.fleet-composer.abyssal .stat-label {
  color: #f8bbd9;
}

.stat-value {
  display: block;
  font-size: 1.5rem;
  font-weight: bold;
  color: #e3f2fd;
}

.fleet-composer.abyssal .stat-value {
  color: #ffebee;
}

/* 洗練されたステータスパネル */
.fleet-stats-panel-enhanced {
  background: linear-gradient(135deg, rgba(13, 71, 161, 0.15), rgba(25, 118, 210, 0.1));
  border: 1px solid rgba(100, 181, 246, 0.3);
  border-radius: 20px;
  padding: 20px;
  margin-bottom: 30px;
  backdrop-filter: blur(15px);
  box-shadow: 0 8px 32px rgba(100, 181, 246, 0.1);
}

.fleet-composer.abyssal .fleet-stats-panel-enhanced {
  background: linear-gradient(135deg, rgba(136, 14, 79, 0.15), rgba(183, 28, 28, 0.1));
  border-color: rgba(244, 143, 177, 0.3);
  box-shadow: 0 8px 32px rgba(244, 143, 177, 0.1);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 20px;
}

.stat-group {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 15px;
  padding: 16px;
  border: 1px solid rgba(100, 181, 246, 0.2);
}

.fleet-composer.abyssal .stat-group {
  border-color: rgba(244, 143, 177, 0.2);
}

.stat-group-title {
  font-size: 1rem;
  font-weight: 600;
  color: #64b5f6;
  margin: 0 0 12px 0;
  text-align: center;
  text-shadow: 0 0 10px rgba(100, 181, 246, 0.3);
}

.fleet-composer.abyssal .stat-group-title {
  color: #f48fb1;
  text-shadow: 0 0 10px rgba(244, 143, 177, 0.3);
}

.stat-row-enhanced {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 8px;
  padding: 6px;
  border-radius: 8px;
  transition: all 0.2s ease;
}

.stat-row-enhanced:hover {
  background: rgba(100, 181, 246, 0.1);
}

.fleet-composer.abyssal .stat-row-enhanced:hover {
  background: rgba(244, 143, 177, 0.1);
}

.stat-icon {
  font-size: 1.2rem;
  width: 24px;
  text-align: center;
}

.stat-info {
  display: flex;
  flex-direction: column;
  min-width: 60px;
}

.stat-label-enhanced {
  font-size: 0.8rem;
  color: #90caf9;
  font-weight: 500;
}

.fleet-composer.abyssal .stat-label-enhanced {
  color: #f8bbd9;
}

.stat-value-enhanced {
  font-size: 1.1rem;
  font-weight: bold;
  color: #e3f2fd;
  text-shadow: 0 0 5px rgba(100, 181, 246, 0.3);
}

.fleet-composer.abyssal .stat-value-enhanced {
  color: #ffebee;
  text-shadow: 0 0 5px rgba(244, 143, 177, 0.3);
}

.stat-bar {
  flex: 1;
  height: 6px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 3px;
  overflow: hidden;
  position: relative;
}

.stat-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #64b5f6, #42a5f5);
  border-radius: 3px;
  transition: width 0.5s ease;
  position: relative;
}

.fleet-composer.abyssal .stat-bar-fill {
  background: linear-gradient(90deg, #f48fb1, #ec407a);
}

.stat-bar-fill.defense {
  background: linear-gradient(90deg, #81c784, #66bb6a);
}

.stat-bar-fill.hp {
  background: linear-gradient(90deg, #e57373, #ef5350);
}

.stat-bar-fill.evasion {
  background: linear-gradient(90deg, #ffb74d, #ffa726);
}

.stat-bar-fill.los {
  background: linear-gradient(90deg, #ba68c8, #ab47bc);
}

.fleet-composition-info {
  margin-top: 12px;
  padding-top: 12px;
  border-top: 1px solid rgba(100, 181, 246, 0.2);
}

.fleet-composer.abyssal .fleet-composition-info {
  border-color: rgba(244, 143, 177, 0.2);
}

.ship-count-display {
  display: flex;
  align-items: center;
  gap: 8px;
  justify-content: center;
}

.ship-count-icon {
  font-size: 1.2rem;
}

.ship-count-text {
  font-size: 0.9rem;
  color: #64b5f6;
  font-weight: 600;
}

.fleet-composer.abyssal .ship-count-text {
  color: #f48fb1;
}

.ship-count-dots {
  display: flex;
  gap: 4px;
}

.ship-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.ship-dot.filled {
  background: #64b5f6;
  box-shadow: 0 0 8px rgba(100, 181, 246, 0.5);
}

.fleet-composer.abyssal .ship-dot.filled {
  background: #f48fb1;
  box-shadow: 0 0 8px rgba(244, 143, 177, 0.5);
}

.ship-dot.empty {
  background: rgba(255, 255, 255, 0.2);
  border: 1px solid rgba(100, 181, 246, 0.3);
}

.fleet-composer.abyssal .ship-dot.empty {
  border-color: rgba(244, 143, 177, 0.3);
}

/* 編成名入力エリア */
.fleet-name-input-area {
  background: linear-gradient(135deg, rgba(13, 71, 161, 0.1), rgba(25, 118, 210, 0.05));
  border: 1px solid rgba(100, 181, 246, 0.2);
  border-radius: 15px;
  padding: 20px;
  margin-bottom: 30px;
  backdrop-filter: blur(10px);
}

.fleet-composer.abyssal .fleet-name-input-area {
  background: linear-gradient(135deg, rgba(136, 14, 79, 0.1), rgba(183, 28, 28, 0.05));
  border-color: rgba(244, 143, 177, 0.2);
}

.fleet-name-container {
  display: flex;
  align-items: center;
  gap: 15px;
  max-width: 600px;
  margin: 0 auto;
}

.fleet-name-label {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 1rem;
  font-weight: 600;
  color: #64b5f6;
  min-width: 80px;
}

.fleet-composer.abyssal .fleet-name-label {
  color: #f48fb1;
}

.fleet-name-icon {
  font-size: 1.2rem;
}

.fleet-name-input {
  flex: 1;
  padding: 12px 16px;
  border: 2px solid rgba(100, 181, 246, 0.3);
  border-radius: 10px;
  background: rgba(255, 255, 255, 0.1);
  color: #e3f2fd;
  font-size: 1rem;
  font-weight: 500;
  transition: all 0.3s ease;
  backdrop-filter: blur(5px);
}

.fleet-composer.abyssal .fleet-name-input {
  border-color: rgba(244, 143, 177, 0.3);
  color: #ffebee;
}

.fleet-name-input:focus {
  outline: none;
  border-color: #64b5f6;
  background: rgba(255, 255, 255, 0.15);
  box-shadow: 0 0 15px rgba(100, 181, 246, 0.3);
}

.fleet-composer.abyssal .fleet-name-input:focus {
  border-color: #f48fb1;
  box-shadow: 0 0 15px rgba(244, 143, 177, 0.3);
}

.fleet-name-input::placeholder {
  color: rgba(255, 255, 255, 0.5);
  font-style: italic;
}

.fleet-count-indicator {
  display: flex;
  align-items: center;
  padding: 8px 12px;
  background: rgba(100, 181, 246, 0.2);
  border-radius: 8px;
  border: 1px solid rgba(100, 181, 246, 0.3);
}

.fleet-composer.abyssal .fleet-count-indicator {
  background: rgba(244, 143, 177, 0.2);
  border-color: rgba(244, 143, 177, 0.3);
}

.fleet-count-text {
  font-size: 0.9rem;
  font-weight: 600;
  color: #64b5f6;
}

.fleet-composer.abyssal .fleet-count-text {
  color: #f48fb1;
}

/* 2列×3行の6隻編成レイアウト */
.fleet-slots {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(2, auto);
  gap: 15px;
  max-width: 900px;
  margin: 0 auto;
}

.fleet-slot {
  background: rgba(25, 118, 210, 0.1);
  border: 2px dashed rgba(100, 181, 246, 0.3);
  border-radius: 15px;
  padding: 12px;
  min-height: 160px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
}

.fleet-composer.abyssal .fleet-slot {
  background: rgba(183, 28, 28, 0.1);
  border-color: rgba(244, 143, 177, 0.3);
}

.fleet-slot.occupied {
  background: rgba(100, 181, 246, 0.15);
  border-color: rgba(100, 181, 246, 0.5);
  border-style: solid;
}

.fleet-composer.abyssal .fleet-slot.occupied {
  background: rgba(244, 143, 177, 0.15);
  border-color: rgba(244, 143, 177, 0.5);
}

.fleet-slot:hover {
  border-color: rgba(100, 181, 246, 0.7);
  background: rgba(100, 181, 246, 0.2);
  transform: scale(1.02);
}

.fleet-composer.abyssal .fleet-slot:hover {
  border-color: rgba(244, 143, 177, 0.7);
  background: rgba(244, 143, 177, 0.2);
}

/* ドラッグ&ドロップ視覚的フィードバック */
.fleet-slot.drag-over {
  border-color: #4caf50 !important;
  background: rgba(76, 175, 80, 0.2) !important;
  transform: scale(1.05);
  box-shadow: 0 0 20px rgba(76, 175, 80, 0.5);
}

.ship-card-container.dragging {
  opacity: 0.5;
  transform: scale(0.95);
  filter: brightness(0.7);
  z-index: 1100; /* ドラッグ中は最前面に */
  position: relative;
}

.ship-card-container {
  transition: all 0.2s ease;
}

.ship-card-container:hover {
  transform: translateY(-4px);
  cursor: grab;
}

.ship-card-container:active {
  cursor: grabbing;
}

/* 艦娘カード（スロット内） */
.ship-card-slot {
  display: flex;
  align-items: center;
  gap: 12px;
  width: 100%;
  position: relative;
}

.ship-card-slot .ship-avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  border: 3px solid #64b5f6;
  object-fit: cover;
  box-shadow: 0 0 15px rgba(100, 181, 246, 0.4);
}

.fleet-composer.abyssal .ship-card-slot .ship-avatar {
  border-color: #f48fb1;
  box-shadow: 0 0 15px rgba(244, 143, 177, 0.4);
}

.ship-info {
  flex: 1;
}

.ship-name {
  font-weight: bold;
  font-size: 1.1rem;
  color: #e3f2fd;
  margin-bottom: 4px;
}

.fleet-composer.abyssal .ship-name {
  color: #ffebee;
}

.ship-level {
  font-size: 0.9rem;
  color: #90caf9;
}

.fleet-composer.abyssal .ship-level {
  color: #f8bbd9;
}

.remove-button {
  position: absolute;
  top: -5px;
  right: -5px;
  width: 24px;
  height: 24px;
  border-radius: 2px;
  background: transparent;
  color: rgba(255, 255, 255, 0.8);
  border: none;
  cursor: pointer;
  font-size: 16px;
  line-height: 1;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.remove-button:hover {
  background: rgba(244, 67, 54, 0.8);
  color: #fff;
}

.remove-button::before,
.remove-button::after {
  content: '';
  position: absolute;
  width: 12px;
  height: 2px;
  background-color: currentColor;
  border-radius: 1px;
}

.remove-button::before {
  transform: rotate(45deg);
}

.remove-button::after {
  transform: rotate(-45deg);
}

/* 空のスロット */
.empty-slot {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  color: rgba(100, 181, 246, 0.6);
}

.fleet-composer.abyssal .empty-slot {
  color: rgba(244, 143, 177, 0.6);
}

.slot-number {
  font-size: 1.5rem;
  font-weight: bold;
}

.slot-text {
  font-size: 0.9rem;
}

/* 新しい洗練された艦隊スロット */
.ship-card-fleet-slot {
  width: 100%;
  height: 100%;
  border-radius: 12px;
  overflow: hidden;
  position: relative;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  background: rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}

.ship-banner-container {
  flex: 0 0 auto;
  height: 60px;
  width: 100%;
  position: relative;
}

.ship-background-fleet {
  width: 100%;
  height: 100%;
  background-size: contain;
  background-position: center center;
  background-repeat: no-repeat;
  background-color: #000;
  position: relative;
}

.ship-overlay-fleet {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    90deg,
    rgba(0, 0, 0, 0.8) 0%,
    rgba(0, 0, 0, 0.1) 40%,
    rgba(0, 0, 0, 0.1) 60%,
    rgba(0, 0, 0, 0.8) 100%
  );
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 4px 8px;
}

.ship-header-fleet {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 6px;
}

.ship-position {
  background: rgba(100, 181, 246, 0.9);
  color: white;
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 0.7rem;
  font-weight: bold;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
  line-height: 1;
}

.fleet-composer.abyssal .ship-position {
  background: rgba(244, 143, 177, 0.9);
}

.ship-type-badge {
  background: rgba(0, 0, 0, 0.8);
  color: #64b5f6;
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 0.65rem;
  border: 1px solid rgba(100, 181, 246, 0.5);
  backdrop-filter: blur(5px);
  font-weight: 600;
  line-height: 1;
}

.fleet-composer.abyssal .ship-type-badge {
  color: #f48fb1;
  border-color: rgba(244, 143, 177, 0.5);
}

/* 情報エリア */
.ship-info-area {
  flex: 1;
  padding: 8px;
  background: rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.ship-name-fleet {
  color: #e3f2fd;
  font-weight: bold;
  font-size: 1rem;
  text-align: center;
  margin-bottom: 2px;
  line-height: 1;
}

.ship-level-fleet {
  color: #64b5f6;
  font-size: 0.85rem;
  font-weight: 600;
  text-align: center;
  margin-bottom: 4px;
  line-height: 1;
}

.fleet-composer.abyssal .ship-level-fleet {
  color: #f48fb1;
}

/* ステータスグリッド */
.ship-stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 3px;
  font-size: 0.75rem;
}

.stat-item-fleet {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(100, 181, 246, 0.1);
  padding: 3px 6px;
  border-radius: 4px;
  border: 1px solid rgba(100, 181, 246, 0.2);
}

.fleet-composer.abyssal .stat-item-fleet {
  background: rgba(244, 143, 177, 0.1);
  border-color: rgba(244, 143, 177, 0.2);
}

.stat-label {
  color: #90caf9;
  font-size: 0.7rem;
  font-weight: 500;
}

.fleet-composer.abyssal .stat-label {
  color: #f8bbd9;
}

.stat-value {
  color: #e3f2fd;
  font-size: 0.75rem;
  font-weight: 600;
}

.fleet-composer.abyssal .stat-value {
  color: #ffebee;
}

/* 装備スロット */
.equipment-slots {
  display: flex;
  gap: 4px;
  margin: 6px 0;
  flex-wrap: wrap;
}

.equipment-slot {
  display: flex;
  align-items: center;
  gap: 3px;
  background: rgba(100, 181, 246, 0.15);
  border: 1px solid rgba(100, 181, 246, 0.3);
  border-radius: 4px;
  padding: 2px 6px;
  font-size: 0.65rem;
}

.fleet-composer.abyssal .equipment-slot {
  background: rgba(244, 143, 177, 0.15);
  border-color: rgba(244, 143, 177, 0.3);
}

/* 新しい縦並び装備スロット */
.equipment-slots-vertical {
  display: flex;
  flex-direction: column;
  gap: 3px;
  margin: 6px 0;
  width: 100%;
}

.equipment-slot-field {
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(100, 181, 246, 0.4);
  border-radius: 4px;
  padding: 4px 8px;
  min-height: 24px;
  width: 100%;
  box-sizing: border-box;
  font-size: 0.7rem;
  transition: background-color 0.2s ease;
}

.equipment-slot-field:hover {
  background: rgba(100, 181, 246, 0.15);
}

.equipment-slot-content {
  display: flex;
  align-items: center;
