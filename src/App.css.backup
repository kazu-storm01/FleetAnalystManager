/* モーダルトリガーボタンのスタイル */
.add-buttons-container {
  display: flex;
  gap: 12px;
  justify-content: center;
  flex-wrap: wrap;
}

.modal-trigger-btn {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 12px 20px;
  background: linear-gradient(45deg, #4facfe, #00f2fe);
  color: white;
  border: none;
  border-radius: 25px;
  cursor: pointer;
  font-weight: bold;
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(79, 172, 254, 0.3);
  font-size: 0.9rem;
}

.modal-trigger-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(79, 172, 254, 0.4);
}

.modal-trigger-btn .material-icons {
  font-size: 1.1rem !important;
}

.fleet-analysis-manager.abyssal .modal-trigger-btn {
  background: linear-gradient(45deg, #ff6b6b, #ee5a24);
  box-shadow: 0 4px 12px rgba(255, 107, 107, 0.3);
}

.fleet-analysis-manager.abyssal .modal-trigger-btn:hover {
  box-shadow: 0 6px 16px rgba(255, 107, 107, 0.4);
}

/* タスク・URLモーダルのスタイル */
.modal-content.task-modal,
.modal-content.url-modal {
  background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
  border-radius: 15px;
  padding: 25px;
  max-width: 500px;
  width: 90%;
  border: 2px solid rgba(79, 172, 254, 0.3);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  animation: slideIn 0.3s ease;
}

.fleet-analysis-manager.abyssal .modal-content.task-modal,
.fleet-analysis-manager.abyssal .modal-content.url-modal {
  background: linear-gradient(135deg, #2d1b1b 0%, #1a0e0e 100%);
  border: 2px solid rgba(255, 107, 107, 0.3);
}

.modal-body .input-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin-bottom: 20px;
}

.modal-body .input-group label {
  color: #b3e5fc;
  font-weight: bold;
  font-size: 0.9rem;
}

.fleet-analysis-manager.abyssal .modal-body .input-group label {
  color: #d3d3d3;
}

.modal-body .task-input,
.modal-body .url-input {
  padding: 12px;
  border: 1px solid rgba(79, 172, 254, 0.3);
  border-radius: 8px;
  background: rgba(255, 255, 255, 0.1);
  color: white;
  font-size: 1rem;
}

.fleet-analysis-manager.abyssal .modal-body .task-input,
.fleet-analysis-manager.abyssal .modal-body .url-input {
  border-color: rgba(255, 107, 107, 0.3);
  background: rgba(0, 0, 0, 0.2);
}

.modal-body .task-input:focus,
.modal-body .url-input:focus {
  outline: none;
  border-color: #4facfe;
  box-shadow: 0 0 8px rgba(79, 172, 254, 0.3);
}

.fleet-analysis-manager.abyssal .modal-body .task-input:focus,
.fleet-analysis-manager.abyssal .modal-body .url-input:focus {
  border-color: #ff6b6b;
  box-shadow: 0 0 8px rgba(255, 107, 107, 0.3);
}

@media (max-width: 768px) {
  .add-buttons-container {
    flex-direction: column;
  }
  
  .modal-trigger-btn {
    width: 100%;
    justify-content: center;
  }
  
  .modal-content.task-modal,
  .modal-content.url-modal {
    width: 95%;
    padding: 20px;
  }
}


