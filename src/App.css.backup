/* チャートボタンの脈動アニメーション */
@keyframes chartButtonPulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
  }
  50% {
    transform: scale(1.1);
    box-shadow: 0 6px 25px rgba(76, 175, 80, 0.6);
  }
}

/* 海色モード（shipgirl）でのmaterial-iconsと艦隊状況数字を白色にする */
.fleet-analysis-manager.shipgirl .material-icons {
  color: white !important;
}

/* 海色モードでの艦隊状況の数字を白色にする */
.fleet-analysis-manager.shipgirl .stat-value,
.fleet-analysis-manager.shipgirl .overview-value,
.fleet-analysis-manager.shipgirl .preview-value,
.fleet-analysis-manager.shipgirl .chart-svg .axis-text {
  color: white !important;
}

/* 海色モードでのチェックボックスの色を緑色にする */
.fleet-analysis-manager.shipgirl input[type="checkbox"] {
  appearance: none;
  width: 18px;
  height: 18px;
  background: transparent;
  border: 2px solid #ccc;
  border-radius: 3px;
  cursor: pointer;
  position: relative;
  transition: all 0.2s ease;
}

.fleet-analysis-manager.shipgirl input[type="checkbox"]:checked {
  background: #4caf50;
  border-color: #4caf50;
}

.fleet-analysis-manager.shipgirl input[type="checkbox"]:checked::after {
  content: '✓';
  position: absolute;
  color: white;
  font-size: 14px;
  font-weight: bold;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.fleet-analysis-manager.shipgirl input[type="checkbox"]:hover:not(:checked) {
  border-color: #999;
}

.fleet-analysis-manager.shipgirl input[type="checkbox"]:checked:hover {
  background: #45a049;
  border-color: #45a049;
}

